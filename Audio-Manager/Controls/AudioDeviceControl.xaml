

<UserControl x:Class="Audio_Manager.Controls.AudioDeviceControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:Audio_Manager.Controls"
            mc:Ignorable="d" 
            d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
		<Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
		<StackPanel Grid.Column="1">
            <Label x:Name="DeviceNameTextbox" Content="{Binding DeviceName}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72"/>
        </StackPanel>
    </Grid>
</UserControl>

